<!-- Front page -->
<div class="no-padding-div" id="page-home">
  <div class="col-md-9 pull-right">
    <div class="panel panel-default panel-main" ng-repeat="post in posts">
      <div class="panel-heading">
        <a class="post-link" href="/blog/{{post._id}}"><h3 class="panel-title post-link">{{post.title}}</h3></a>
      </div>
      <div class="panel-body">
        <p class="p-author-date">posted by {{post.author}} on {{formatDate(post.date)}}</p>
        <p>{{post.body}}</p>
      </div>
      <div class="panel-footer">
        <a class="post-link" href="/blog/{{post._id}}#comments">{{post.comments.length}} comments</a>
      </div>
    </div>
  </div>
</div>
<!-- End front page -->
