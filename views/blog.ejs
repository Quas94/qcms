<!-- Front page -->
<div class="panel panel-default panel-main" ng-repeat="post in posts">
  <div class="panel-heading">
    <a class="post-link" href="/blog/{{post._id}}"><h3 class="panel-title post-link">{{post.title}}</h3></a>
  </div>
  <div class="panel-body">
    <p class="p-author-date">posted by <em>{{post.author}}</em> on {{formatDate(post.date)}}</p>
    <div ng-bind-html="post.body" class="blog-post-body"></div>
    <p class="p-author-date" style="padding-bottom:0px;margin-bottom:0px;border-bottom:0px;">category: <em>{{post.category}}</em></p>
    <p class="p-author-date">tags: <span ng-repeat="tag in post.tags">{{tag}}</span></p>
  </div>
  <div class="panel-footer">
    <a class="post-link" href="/blog/{{post._id}}">{{post.comments.length}} comment{{getTrailingS(post);}}</a>
  </div>
</div>
<!-- End front page -->
