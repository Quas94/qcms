<!-- Panel 1 of sidebar -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Search</h3>
  </div>
  <div class="panel-body">
    <p>
    <div class="input-group col-md-12">
      <input type="text" class="form-control input-sm" placeholder="under construction" />
      <span class="input-group-btn">
          <button class="btn btn-default btn-sm" type="button">
            <i class="glyphicon glyphicon-search"></i>
          </button>
      </span>
    </div>
    </p>
  </div>
</div>

<!-- Panel 2 of sidebar -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Contact</h3>
  </div>
  <div class="panel-body">
    <p class="center">
      <a <%= contactsNewWindow.twitter %> href="<%= contacts.twitter %>"><img class="img-contact" src="images/twitter.png" /></a>
      <a <%= contactsNewWindow.linkedin %> href="<%= contacts.linkedin %>"><img class="img-contact" src="images/linkedin.png" /></a>
      <a <%= contactsNewWindow.facebook %> href="<%= contacts.facebook %>"><img class="img-contact" src="images/facebook.png" /></a>
      <a <%= contactsNewWindow.youtube %> href="<%= contacts.youtube %>"><img class="img-contact" src="images/youtube.png" /></a>
      <!-- no new window for mail at all -->
      <a href="mailto:<%= contacts.email %>"><img class="img-contact" src="images/email.png" /></a>
    </p>
  </div>
</div>

<!-- Panel 3 of sidebar -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Theme</h3>
  </div>
  <div class="panel-body">
    <p class="center">Current theme: <%= theme %></p>
    <p class="center"><a href="#" class="btn btn-default btn-sm btn-change-theme" ng-click="changeTheme();">Change theme!</a></p>
  </div>
</div>

