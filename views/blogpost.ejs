<!-- Front page -->
<div class="no-padding-div" id="page-home">
    <div class="col-md-9 pull-right">
        <div class="panel panel-default panel-main">
            <div class="panel-heading">
                <h3 class="panel-title post-link">{{post.title}}</h3>
            </div>
            <div class="panel-body">
                <p class="post-author-date">posted by {{post.author}} on {{post.date}}</p>
                <p>{{post.body}}</p>
            </div>
            <div class="panel-footer">
                <a class="post-link" href="/blog/{{post._id}}#comments">{{post.comments.length}} comments</a>
            </div>
        </div>
    </div>
</div>
<!-- End front page -->
