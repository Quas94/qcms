<!-- Front page -->
<div class="no-padding-div" id="page-home">
    <div class="col-md-9 pull-right">
        <div class="panel panel-default panel-main">
            <div class="panel-heading">
                <h3 class="panel-title">{{post.title}}</h3>
            </div>
            <div class="panel-body">
                <p class="post-author-date">posted by {{post.author}} on {{formatDate(post.date)}}</p>
                <p>{{post.body}}</p>
            </div>
        </div>

        <div class="panel panel-default panel-main" ng-repeat="comment in post.comments">
            <div class="panel-body">
                <p class="post-author-date">posted by {{comment.author}} on {{formatDate(comment.date)}}</p>
                <p>{{comment.body}}</p>
            </div>
        </div>
    </div>
</div>
<!-- End front page -->
