<!doctype html>
<html ng-app="create">
<head>
  <!-- META -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Admin create post</title>

  <!-- SCROLLS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <style>
    html {
      overflow-y: scroll;
    }
    body {
      padding-top: 50px;
    }
    #posts-list {
      margin-bottom: 30px;
    }
  </style>

  <!-- JS -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
  <script src="/js/create.ng.js"></script>
</head>
<body ng-controller="createCtrl">
<div class="container">
  <!-- Header and post count -->
  <div class="jumbotron text-center">
    <h1>Number of posts: <span class="label label-info">{{ posts.length }}</span></h1>
  </div>

  <!-- Posts list -->
  <div id="posts-list" class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <!-- loop over the posts -->
      <div class="checkbox" ng-repeat="post in posts">
        <label>
          <p><input type="checkbox" ng-click="deletePost(post._id)">{{post.title}}</p>
          <p>{{post.body}}</p>
        </label>
      </div>
    </div>
  </div>

  <!-- Create post form -->
  <div id="new-post-form" class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
      <form>
        <div class="form-group">
          <input type="text" class="form-control input-lg text-center" placeholder="title" ng-model="formData.title">
          <textarea class="form-control" ng-model="formData.body" rows="5" placeholder="write your post here"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg" ng-click="createPost()">Create Post</button>
      </form>
    </div>
  </div>
</div>
</body>
</html>
